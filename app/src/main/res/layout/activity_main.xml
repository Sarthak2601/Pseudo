<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crashlytics Recording"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/buttonAnalytics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analytics Recording"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/buttonException"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exception Recording"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/buttonExceptionDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exception Recreating"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>